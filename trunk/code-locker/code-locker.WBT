if (_cmd == "ZIP")
	_myPathName = IntControl( 1004, 0, 0, 0, 0)
	_myPath = FilePath( _myPathName)
	flags = 1|2
	_path = AskDirectory("ZIP Which Folder ?", _myPath, _myPath, "Are you sure ?", flags)
