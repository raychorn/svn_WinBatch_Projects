#DefineFunction CleanupB(fName)
	IntControl(73, 2,0,0,0)
	
	FileDelete( "%fName%\*.*")
	DirRemove( fName)

	Return(@True)
	
	:WBERRORHANDLER
	Error=LastError()
	Terminate(error!=3246,"Error %error%",StrCat(wberrorhandlerline,@CRLF,IntControl(34,error,0,0,0)))
	%wberrorhandlerassignment%="Not Found"
