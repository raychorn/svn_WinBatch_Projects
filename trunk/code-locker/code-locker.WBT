#DefineFunction ObscurePhrase(str) 
	IntControl(73, 2,0,0,0)
	t = ""
	
	j = StrLen(str)
	for i = 0 to j - 1
		_ch = StrSub( str, j - i, 1)
		_ch = Num2Char(Char2Num(_ch) + 128)
		t = StrCat(t, _ch)
	next
	Return(t)
	
	:WBERRORHANDLER
	Error=LastError()
	Terminate(error!=3246,"Error %error%",StrCat(wberrorhandlerline,@CRLF,IntControl(34,error,0,0,0)))
	%wberrorhandlerassignment%="Not Found"
	IntControl(73, 2,0,0,0)
	Return

#EndFunction


#DefineFunction UnObscurePhrase(t)
	IntControl(73, 2,0,0,0)
	str = ""
	
	j = StrLen(t)
	for i = 0 to j - 1
		_ch = StrSub( t, j - i, 1)
		_ch = Num2Char(Char2Num(_ch) - 128)
		str = StrCat(str, _ch)
	next
	Return(str)
	
	:WBERRORHANDLER
	Error=LastError()
	Terminate(error!=3246,"Error %error%",StrCat(wberrorhandlerline,@CRLF,IntControl(34,error,0,0,0)))
	%wberrorhandlerassignment%="Not Found"
	IntControl(73, 2,0,0,0)
	Return

#EndFunction


#DefineFunction CheckSum(str)
	IntControl(73, 2,0,0,0)
	cksum = 0
	
	j = StrLen(str)
	for i = 1 to j
		_ch = StrSub( str, i, 1)
		cksum = cksum + Char2Num(_ch)
	next
	Return(cksum)
	
	:WBERRORHANDLER
	Error=LastError()
	Terminate(error!=3246,"Error %error%",StrCat(wberrorhandlerline,@CRLF,IntControl(34,error,0,0,0)))
	%wberrorhandlerassignment%="Not Found"
	IntControl(73, 2,0,0,0)
	Return

#EndFunction


